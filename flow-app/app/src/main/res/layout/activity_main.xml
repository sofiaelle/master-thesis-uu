<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reactivestreams.benchmarks.MainActivity">


    <Button
        android:id="@+id/RunBenchmarkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="110dp"

        android:text="Launch benchmark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/spinnerLayout"
        app:layout_constraintVertical_bias="0.839" />

    <LinearLayout
        android:id="@+id/spinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <TextView
            android:id="@+id/operatorTextView"
            android:layout_width="335dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Operator"
            android:textSize="18dp"
            />

        <Spinner
            android:id="@+id/BenchmarkOperatorSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            />

        <TextView
            android:id="@+id/typeTextView"
            android:layout_width="335dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Type"
            android:textSize="18dp"
            />
        <Spinner
            android:id="@+id/BenchmarkTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            />

        <TextView
            android:id="@+id/metricTextView"
            android:layout_width="335dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Metric"
            android:textSize="18dp"
            />
        <Spinner
            android:id="@+id/BenchmarkMetricSpinner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"

            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>